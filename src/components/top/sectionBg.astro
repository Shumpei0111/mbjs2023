---
const { genre } = Astro.props;

type Props = {
  genre: string;
};
---

<svg width="750" height="416" viewBox="0 -20 750 306">
  <text transform="scale(2)">
    <tspan x="0" y="70">{genre}</tspan>
    <tspan x="0" y="155">ARTWORK</tspan>
  </text>
</svg>

<style lang="scss">
  @use "../../style/variables.scss" as v;

  svg {
    height: auto;
    overflow: visible;
  }

  text {
    fill: transparent;
    stroke: v.$primary;
    stroke-width: 0.2;
    font-size: 10rem;
  }
</style>
